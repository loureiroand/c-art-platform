<div class='container center-vertical'>
  <div class='row'>
    <div class='col-md-6'>
      <img
        src='{{course.imageUrl}}'
        class='img-fluid mt-4'
        alt='Course Image'
      />
    </div>
    <div class='col-md-6 mt-4'>
      <h1 class='course-details-title'>{{course.title}}</h1>
      <p>{{course.description}}</p>
      <p>Instructor: {{course.instructor}}</p>
      {{!-- <h1>{{currentUser.accountType.isStudent}}</h1> --}}
      {{#if currentUser.accountType.isStudent}}
        <form action='/courses/{{course._id}}/enroll' method='POST'>
          <button type='submit' class='btn btn-purple'>Enroll</button>
        </form>

      {{else}}
        <div class='row'>
          <div class='col'>
            <a
              href='/courses/{{course._id}}/edit'
              class='btn btn-purple'
            >Edit</a>
          </div>
          <div class='col delete-btn'>
            <a
              href='/courses/{{course._id}}/delete'
              class='btn btn-danger'
            >Delete</a>
          </div>

          <div class='col'>
            <a class='btn btn-purple back' href='/instructor/dashboard'>Back to
              Dashboard</a>
          </div>
        </div>

      {{/if}}
    </div>
  </div>
</div>