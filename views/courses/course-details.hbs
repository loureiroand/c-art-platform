<h1>Course Details</h1>
<div>
  <h2>{{title}}</h2>
  <p>Description: {{description}}</p>
  <p>Instructor: {{instructor}}</p>
  <p>Rating: {{rating}}</p>
  <p>Lessons: {{lessons}}</p>
</div>

{{#if currentUser.isStudent}}
  <form action='/courses/{{_id}}/enroll' method='POST'>
    <button type='submit'>Enroll in Course</button>
  </form>
{{/if}}

<a href='/courses/create'>Create courses</a>

<form action='/courses/{{_id}}/delete'>
  <button>Delete</button>
</form>

<a href='/courses/{{_id}}/edit'>Edit Course</a>

<!-- Enrollment button -->
<form action='/courses/{{_id}}/enroll' method='POST'>
  <button type='submit'>Enroll</button>
</form>