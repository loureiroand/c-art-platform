<h1>Course Details</h1>
<div>
  <h2>{{title}}</h2>
  <p>Description: {{description}}</p>
  <p>Instructor: {{instructor}}</p>
  <p>Rating: {{rating}}</p>
</div>

{{#if currentUser.isStudent}}
  <form action='/course/{{_id}}/enroll' method='POST'>
    <button type='submit'>Enroll in Course</button>
  </form>
{{/if}}

<a href='/courses/create'>Create courses</a>

<form action='/courses/delete/{{id}}' method='POST'>
  <button>Delete</button>
</form>