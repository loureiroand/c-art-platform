<h2>{{Course.title}}</h2>
<p>
	<strong>Instructor: </strong> {{Course.instructor}}
</p>
<p>
	{{Course.description}}
</p>
<ul class="alt">
	{{#each Course.lessons}}
		<li>{{lesson_title}}</li>
	{{/each}}
</ul>

{{#if user}}
	<form id="classRegForm" method="post" action="/{{type}}s/classes/register">
		<input type="hidden" name="student_id" value="{{User._id}}">
		<input type="hidden" name="course_id" value="{{Course._id}}">
		<input type="hidden" name="course_title" value="{{Course.title}}">
		<input type="submit" course="button" value="Register For This Class">
	</form>
{{else}}
	<p>You must be logged in to register for this class</p>