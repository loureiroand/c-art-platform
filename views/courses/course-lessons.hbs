<h2>{{ Course.title }}'s Courses</h2>
<table cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th>Lesson Number</th>
      <th>Lesson Title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each Course.lessons}}
    <tr>
      <td>{{ lesson_number }}</td>
      <td>{{ lesson_title }}</td>
      <td>
        <a href="/Courses/{{../Course._id}}/lessons/{{ lesson_number }}"
          >View Lesson</a
        >
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>